{
  "sources": [
    {
      "type": "github",
      "url": "https://github.com/ergoplatform/ergodocs",
      "branch": "main",
      "description": "Ergo Platform Documentation Repository"
    }
  ],
  "output": {
    "format": "markdown",
    "directory": "output",
    "structure": "topic"
  },
  "processing": {
    "summarize": true,
    "extract_code_samples": true,
    "generate_qa_pairs": true
  },
  "schedule": {
    "frequency": "weekly",
    "day_of_week": "monday",
    "time": "00:00"
  },
  "ai": {
    "default_provider": "anthropic",
    "openai": {
      "model": "o1-mini"
    },
    "anthropic": {
      "model": "claude-3-haiku-20240307"
    }
  }
} 